# Supabase Configuration
# Get these from your Supabase project settings: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Vite/Legacy Support (same values as above)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Pesapal Payment Gateway
# Get these from: https://www.pesapal.com/
PESAPAL_CONSUMER_KEY=your_pesapal_consumer_key
PESAPAL_CONSUMER_SECRET=your_pesapal_consumer_secret
PESAPAL_ENVIRONMENT=sandbox  # Use 'sandbox' for testing, 'live' for production

# OpenRouter AI API (for code generation)
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key

# Resend Email Service (for sending emails)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key
